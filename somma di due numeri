#include <iostream>
using namespace std;

int main()
{
    int numero1, numero2;
    cout << "Dammi un numero: ";
    cin >> numero1;
    cout << "Dammi un altro numero: ";
    cin >> numero2;
    int somma;
    somma = numero1 + numero2;
    cout << "La somma tra " << numero1 << " e " << numero2 << " e' " << somma;

    return 0;
}
