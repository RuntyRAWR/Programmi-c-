#include <iostream>
using namespace std;

int main()
{
    int lato1, lato2, lato3;

    cout << "Dammi tre valori e ti diro' che tipo di triangolo e', calcolero' il perimetro e l'area!" << endl << endl;

    cout << "Dammi il valore del primo lato: ";
    cin >> lato1;
    cout << "Dammi il valore del secondo lato: ";
    cin >> lato2;
    cout << "Dammi il valore del terzo lato: ";
    cin >> lato3;

    if (lato1 == lato2)
    {
        if(lato2 == lato3)
        {
                cout << "Il triangolo e' equilatero" << endl;
        }
    }
    else
	{

	if (lato1 == lato3)

        {
            cout << "Il triangolo e' isoscele" << endl;
        }
    else
        {
            cout << "Il triangolo e' scaleno" << endl;
        }
    }

    // int perimetro;
    float area;

    // perimetro = lato1 + lato2 + lato3;
    // cout << "Il perimetro del triangolo e': " << perimetro << endl;
    area = lato1 * lato2 / 2;
    cout << "L'area del triangolo e': " << area << endl;


    return 0;
}
